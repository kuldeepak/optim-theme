<div class="custom-testimonial-section page-width" style="background-color:{{ section.settings.bg_col }};padding-top:{{ section.settings.p_v }}px;
 padding-bottom:{{ section.settings.p_v }}px; margin-top:{{ section.settings.m_v }}px; margin-bottom:{{ section.settings.m_v }}px;">
  <div class="custom-testimonial-section-header" style="text-align: {{ section.settings.hea_ali }};">
    {%- if section.settings.heading != blank -%}
      <h1 style="color:{{ section.settings.head_col }}">{{ section.settings.heading }}</h1>
    {%- endif -%}
    {%- if section.settings.subheading != blank -%}
      <p style="color:{{ section.settings.head_col }}">{{ section.settings.subheading }}</p>
    {%- endif -%}
  </div>
<div class="custom-testimonial-section-wraper">
{%- for block in section.blocks   limit:section.settings.col_num  -%}
    <div class="custom-tetimonial-box-wraper">
      <div class="custom-tetimonial-box">
        <div class="custom-tetimonial-box-image">
          {%- if block.settings.imag != blank -%}
            <img src="{{ block.settings.imag | img_url: 'master' }}" alt="">
          {%- endif -%}
        </div>
        <div class="custom-tetimonial-box-content">
            <h1 class="custom-testimonial-name" style="color:{{ section.settings.con_col }}">{{ block.settings.name }}</h1>
            <p class="custom-testimonial-review" style="color:{{ section.settings.con_col }}">{{ block.settings.review }}</p>
        </div>
      </div>
    </div>
{%- endfor -%}
</div>
</div>

<style>
    .custom-testimonial-section {
        margin-bottom: 50px;
        padding-top: 50px;
        padding-bottom: 0px;
        margin-top: 50px;
    }
    .custom-testimonial-section-header h1 {
        margin: 0;
    }
    .custom-testimonial-section-header p {
        margin: 0;
        margin-top: 10px;
        font-size: 18px;
    }
    .custom-testimonial-section-wraper{
        display: flex;
        align-items: flex-start;
        justify-content: flex-start;
        flex-wrap: wrap;
        margin-top: 60px;
        margin-left: -30px;
    }
    .custom-tetimonial-box-wraper {
        width: 25%;
        padding-left: 30px;
    }
    .custom-tetimonial-box{
        display: flex;
        align-items: center;
        justify-content: center;
        flex-direction: column;
        gap:15px;
    }
    .custom-tetimonial-box-image img {
        max-width: 200px;
        border-radius: 100%;
        height: 100%;
        width: 100%;
        max-height: 200px;
    }
    h1.custom-testimonial-name {
        margin: 0;
        font-size: 30px;
        margin-bottom: 10px;
    }
    p.custom-testimonial-review {
        margin: 0;
    }
    .custom-tetimonial-box-content {
       text-align: center;
    }
    @media (max-width:992px){
        .custom-tetimonial-box-wraper{
            width:33.33%;
        }
    }
    @media (max-width:768px){
        .custom-tetimonial-box-wraper{
            width:50%;
        }
    }
    @media (max-width:576px){
        .custom-tetimonial-box-wraper{
            width:100%;
        }
    }
</style>




{% schema %}
    {
        "name":"Custom Testimonial",
        "settings":[
            {
                "type":"color",
                "default":"#DFDFD8",
                "id":"bg_col",
                "label": "Background Color"
            },
            {
               "type":"select",
               "id": "hea_ali",
               "label": "Heading alignment",
               "default": "center",
               "options": [
                   {
                    "label": "left",
                    "value": "left"
                   },
                   {
                    "label": "center",
                    "value": "center"
                   },
                   {
                    "label": "right",
                    "value": "right"
                   }
               ]  
            },
            {
                "type":"text",
                "id": "heading",
                "label": "Heading",
                "default": "Heading"
            },
            {
                "type":"text",
                "id": "subheading",
                "label": "Subheading",
                "default": "Subheading"
            },
            {
                "type": "range",
                "id": "col_num",
                "default": 4,
                "max": 20,
                "min": 1,
                "step":1,
                "label":"Number of Columns"
            },
            {
                "type":"color",
                "default": "#11151C",
                "id": "head_col",
                "label": "Header Color"
            },
            {
                "type":"color",
                "default": "#11151C",
                "id": "con_col",
                "label": "Content Color"
            },
          {
              "type":"range",
              "id": "btn_r",
              "label": "Button Border radius",
              "max": 300,
              "min": 0,
              "step": 10,
              "default": 10,
              "unit": "px"
            },
            {
              "type":"range",
              "id": "p_v",
              "label": "Vertical Padding",
              "max": 300,
              "min": 0,
              "step": 10,
              "default": 0,
              "unit": "px"
            },
            {
              "type":"range",
              "id": "m_v",
              "label": "Vertical Margin",
              "max": 300,
              "min": 0,
              "step": 10,
              "default": 0,
              "unit": "px"
            }
        ],
        "blocks": [
            {
                "type":"Testimonial",
                "name":"Testimonial",
                "settings":[
                    {
                        "type":"image_picker",
                        "id": "imag",
                        "label": "Testimonial Image"
                    },
                    {
                        "type":"text",
                        "id": "name",
                        "label": "Person Name",
                        "default": "John Doe"
                    },
                    {
                        "type":"text",
                        "id": "review",
                        "label": "Review",
                        "default": "Text here"
                    }
                ]
            }
        ],
        "presets": [
            {
                "name":"Custom Testimonial"
            }
        ]
    }
{% endschema %}