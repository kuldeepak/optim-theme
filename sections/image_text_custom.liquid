<section id="image-text" class="Section {% unless section.settings.image %}Section--spacingNormal{% endunless %} section-{{ section.id }}-padding isolate">
  {%- capture section_content -%}
    <div class="FeatureText__ContentWrapper">
      <div class="FeatureText__Content">
        {%- if section.settings.subheading != blank or section.settings.title != blank or section.settings.content != blank -%}
          <header class="SectionHeader">
            {%- if section.settings.subheading != blank -%}
              <h3 class="SectionHeader__SubHeading Heading u-h6">{{ section.settings.subheading | escape }}</h3>
            {%- endif -%}

            {%- if section.settings.title != blank -%}
              <h2 class="SectionHeader__Heading Heading u-h1">{{ section.settings.title | escape }}</h2>
            {%- endif -%}

            {%- if section.settings.content != blank -%}
              <div class="SectionHeader__Description Rte">
                {{ section.settings.content }}
              </div>
            {%- endif -%}

            {%- if section.settings.link_text != blank -%}
              <a href="{{ section.settings.link_url }}" class="Link Link--underline">{{ section.settings.link_text | escape }}</a>
            {%- endif -%}
          </header>
        {%- endif -%}
      </div>
    </div>
  {%- endcapture -%}

  {%- capture section_image -%}
    {%- if section.settings.image != blank -%}
      <div class="FeatureText__ImageWrapper">
       <img src="{{ section.settings.image | img_url: '800x' }}" alt="{{ section.settings.image.alt | escape }}">
      </div>
    {%- endif -%}
  {%- endcapture -%}

  <div class="FeatureText {% if section.settings.image != blank %}FeatureText--withImage FeatureText--image{{ section.settings.image_position | capitalize }}{% endif %}">
    {%- if section.settings.image_position == 'left' -%}
      {{- section_image -}}
      {{- section_content -}}
    {%- else -%}
      {{- section_content -}}
      {{- section_image -}}
    {%- endif -%}
  </div>
</section>
<style>
  #image-text.section-{{ section.id }}-padding{
    background-color: {{ section.settings.main_bg_color }};
  }
  .section-{{ section.id }}-padding .FeatureText__ContentWrapper h2.SectionHeader__Heading.Heading.u-h1{
  color: {{ section.settings.all_color }};
  }
  h3.SectionHeader__SubHeading.Heading.u-h6{
    text-transform: uppercase;
    font-size: 15px;
	color: {{ section.settings.all_color }};
  }
  section#image-text.section-{{ section.id }}-padding .SectionHeader__Description.Rte ul li {
    
  color: {{ section.settings.all_color }};

  }
    #image-text.section-{{ section.id }}-padding .FeatureText .SectionHeader__Description p{
     color: {{ section.settings.all_color }};
    line-height: 24px;
  }
    .section-{{ section.id }}-padding a.Link.Link--underline{
    background-color: {{ section.settings.bg_color }};
    color: {{ section.settings.color }};
   }
  section#image-text.section-{{ section.id }}-padding .SectionHeader__Description.Rte ul li {
    background-image: url("{{ section.settings.check_image | img_url: '' }}");
   }
   section#image-text.section-{{ section.id }}-padding .SectionHeader__Description.Rte ul li {
    
    background-image: url("{{ section.settings.check_image | img_url: '' }}");
	}

</style>
{% schema %}
{
  "name": "Rich text with image",
  "class": "shopify-section--bordered",
  "settings": [
     {
       "type": "color",
       "id": "main_bg_color",
       "label": "Background color",
       "default": "#fff"
    },
    {
       "type": "color",
       "id": "all_color",
       "label": "Font Color",
        "default": "#000"
    },   
    {
      "type": "text",
      "id": "subheading",
      "label": "Sub-heading",
      "default": "Sub-heading"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Title"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image",
      "info": "1200 x 1200px .png recommended"
    },
    {
      "type": "select",
      "id": "image_position",
      "label": "Image position",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "right"
    },
    {
      "type": "richtext",
      "id": "content",
      "label": "Text",
      "default": "<p>Add your own custom content to give more information about your store, availability details...</p>"
    },
    {
      "type": "image_picker",
      "id": "check_image",
      "label": "Check Image",
      "info": "Tick Image"
    },
    {
      "type": "text",
      "id": "link_text",
      "label": "Link text"
    },
    {
      "type": "url",
      "id": "link_url",
      "label": "Link URL"
    },
    {
       "type": "color",
       "id": "bg_color",
       "label": "Button Background color",
       "default": "#000"
    },
    {
       "type": "color",
       "id": "color",
       "label": "Button Font Color",
        "default": "#ffffff"
   }   
  ], 
  "presets": [
    {
      "category": "Text",
      "name": "Rich text with image",
      "settings": {}
    }
  ]
}
{% endschema %}