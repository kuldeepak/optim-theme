{{ 'section-image-feature.css' | asset_url | stylesheet_tag }}


<div id="feature-{{ section.id }}" class="image-feature">
    <div class="image-feature-inner page-width">
	    <h2 class="title h2">{{ section.settings.heading }}</h2>
	    <div class="img-inner">
		   <div class="col-4 col-left">
		        <div class="text-box box-1">
				    <h3>{{ section.settings.title_01 }}</h3>
					<p>{{ section.settings.text_01 }}</p>
				</div>
				<div class="text-box box-2">
				    <h3>{{ section.settings.title_02 }}</h3>
					<p>{{ section.settings.text_02 }}</p>
				</div>
		   </div>
		   <div class="col-4 col-center ">
		        {%- if section.settings.img_01 != blank -%}
		        <img src="{{section.settings.img_01 | img_url: 'master' }}">
				 {%- else -%}
                 {{ 'detailed-apparel-1' | placeholder_svg_tag: 'placeholder-svg' }}
                {%- endif -%}
		   </div>
		   <div class="col-4 col-right">
		        <div class="text-box box-3">
				    <h3>{{ section.settings.title_03 }}</h3>
					<p>{{ section.settings.text_03 }}</p>
				</div>
				<div class="text-box box-4">
				    <h3>{{ section.settings.title_04 }}</h3>
					<p>{{ section.settings.text_04 }}</p>
				</div>
		   </div>
		</div>
	</div>
</div>

<style>
.image-feature-inner h2 {
    font-size: {{ section.settings.font_size }}px;
    text-align: {{ section.settings.text_alignment }};
    margin-top: 0;
}
.image-feature {
    width: 100%;
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
    background: {{ section.settings.bg_color }};
    
}
</style>


{% schema %}
{
  "name": "feature-image",
  "settings": [
       {
         "type": "color",
         "id": "bg_color",
         "label": "Section background Color",
         "default": "#f2f2f2"
      },
	  {
        "type":"text",
        "id":"heading",
        "label":"Heading",
        "default":"Feature Text"
      },
	  {
      "type": "range",
      "id": "font_size",
      "min": 20,
      "max": 72,
      "step": 2,
      "unit": "px",
      "label": "Font Size",
      "default": 52
    },
	  {
          "type": "select",
          "id": "text_alignment",
          "label": "Text Alignment",
          "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "center"
      },
	  {
        "type": "image_picker",
        "id": "img_01",
        "label": "Image"
      },
	  {
        "type":"text",
        "id":"title_01",
        "label":"Text Heading",
		"default":"Text Heading"
      },
	  {
        "type":"richtext",
        "id":"text_01",
        "label":"Text",
		"default":"<p>Pair text with an image to focus on your chosen product, collection, or blog post. Add details on availability, style, or even provide a review.</p>"
      },
	  {
        "type":"text",
        "id":"title_02",
        "label":"Text Heading",
		"default":"Text Heading"
      },
	  {
        "type":"richtext",
        "id":"text_02",
        "label":"Text",
		"default":"<p>Pair text with an image to focus on your chosen product, collection, or blog post. Add details on availability, style, or even provide a review.</p>"
      },
	  {
        "type":"text",
        "id":"title_03",
        "label":"Text Heading",
		"default":"Text Heading"
      },
	  {
        "type":"richtext",
        "id":"text_03",
        "label":"Text",
		"default":"<p>Pair text with an image to focus on your chosen product, collection, or blog post. Add details on availability, style, or even provide a review.</p>"
      },
	  {
        "type":"text",
        "id":"title_04",
        "label":"Text Heading",
		"default":"Text Heading"
      },
	  {
        "type":"richtext",
        "id":"text_04",
        "label":"Text",
		"default":"<p>Pair text with an image to focus on your chosen product, collection, or blog post. Add details on availability, style, or even provide a review.</p>"
      },
	{
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "feature-image"
    }
  ]
}
{% endschema %}