{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}
<div id="marquee-sliders" class="section-{{ section.id }}-padding">
    <div class="container-fluid">
        <div class="row align-items-center">
            <div class="col-12 col-sm-12 col-md-6 text-c">
                <div class="slick marquees">
                                         
                 {% for block in section.blocks %}
                    {% if block.settings.description != blank %}
                        <div class="story-description">{{ block.settings.description }}</div>
                    {% endif %}                      

                     {% endfor %}               
                </div>
            </div>
        </div>
    </div>
</div>

<style>

div#marquee-sliders .slick-initialized .slick-slide h2, div#marquee-sliders .slick-initialized .slick-slide h2, div#marquee-sliders .slick-initialized .slick-slide h1 {
    color: {{ section.settings.color }};
    font-size: {{ section.settings.font-size}}px; 
    line-height: 40px;
    margin: 0px; 
    display: inline-block;  
    text-align: {{ section.settings.text_align }};
    width: 100%;
}
.story-description.slick-slide {
    margin: 0px 20px;
}
 .slick.marquees.slick-initialized.slick-slider{
   margin-top: 0px;
   margin-bottom: 0px;
}
#marquee-sliders{
         background-color: {{ section.settings.bg_color }};
        color: {{ section.settings.color }};
}
.slick-slide .inner {
  margin: 0 15px;
}
@media only screen and (max-width: 480px){
div#marquee-sliders .slick-initialized .slick-slide h2, div#marquee-sliders .slick-initialized .slick-slide h2, div#marquee-sliders .slick-initialized .slick-slide h1 {
   font-size: {{ section.settings.mobile-font-size}}px; 
 
}
  
}

</style>
<script>
$(document).ready(function($) {
  $('.marquees').slick({
    speed: 2000,
    autoplay: true,
    autoplaySpeed: 0,
    centerMode: true,
    cssEase: 'linear',
    slidesToShow: 1,
    slidesToScroll: 1,
    variableWidth: true,
    infinite: true,
    initialSlide: 1,
    arrows: false,
    buttons: false
  });
});

</script>


{% schema %}
{
    "name": "Marquee-slider",
    "settings": [
        {
            "type": "color",
            "id": "bg_color",
            "label": "Background color",
            "default": "#FFE8D4"
        },
        {
            "type": "color",
            "id": "color",
            "label": "Font Color",
            "default": "#ffffff"
        },
       {
            "type": "range",
            "id": "font-size",
            "min":  22,
            "max":  100,
            "step":  1,
            "unit": "px" ,
            "label": "Font size",
            "default":  22
      },
        {
            "type": "range",
            "id": "mobile-font-size",
            "min":  22,
            "max":  100,
            "step":  1,
            "unit": "px" ,
            "label": "Mobile Font size",
            "default":  22
      },
      {
                "type": "select",
                "id": "text_align",
                "label": "Text alignment",
                "default": "left",
                "options": [
                    {
                        "value": "left",
                        "label": "Left"
                    },
                    {
                        "value": "center",
                        "label": "Center"
                    },
                    {
                        "value": "right",
                        "label": "Right"
                    }
                ]
      },
      {
          "type": "range",
          "id": "padding_top",
          "min": 0,
          "max": 100,
          "step": 4,
          "unit": "px",
          "label": "t:sections.all.padding.padding_top",
          "default": 36
    },
    {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_bottom",
        "default": 36
    }
        
                                                                                        
    ], 
    "blocks": [
        {
            "type": "Item",
            "name": "Marquee-slider",
            "settings": [           
               {
                  "type": "richtext",
                  "id": "description",
                  "label": "Description",
                 "default": "<h1>We're denmark's No.1</h1>"
              }                 
            ]
        }
    ],      
    "presets": [
        {
            "name": "Marquee-slider",
            "category":"Marquee-slider"
        }
    ]
}
{% endschema %}
